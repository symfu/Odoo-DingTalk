<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_dingtalk_hrm_list_tree" model="ir.ui.view">
        <field name="name">dingtalk.hrm.list.tree</field>
        <field name="model">dingtalk.hrm.list</field>
        <field name="arch" type="xml">
            <tree string="员工花名册" js_class="dingtalk_hrm_list_tree">
                <field name="company_id"/>
                <field name="emp_id"/>
                <field name="department_id"/>
                <field name="line_ids"/>
                <field name="create_date" string="创建时间"/>
            </tree>
        </field>
    </record>

    <record id="view_dingtalk_hrm_list_form" model="ir.ui.view">
        <field name="name">dingtalk.hrm.list.form</field>
        <field name="model">dingtalk.hrm.list</field>
        <field name="arch" type="xml">
            <form string="员工花名册">
                <group>
                    <group>
                        <field name="emp_id" options="{'horizontal': true, 'no_create_edit': True}"/>
                    </group>
                    <group>
                        <field name="department_id" options="{'horizontal': true, 'no_create_edit': True}"/>
                    </group>
                </group>
                <notebook>
                    <page string="员工信息">
                        <field name="line_ids">
                            <tree editable="bottom" default_order="sequence">
                                <field name="sequence" widget="handle"/>
                                <field name="field_name"/>
                                <field name="value"/>
                                <field name="label"/>
                                <field name="group_id"/>
                                <field name="field_code"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="dingtalk_hrm_list_action">
        <field name="name">员工花名册</field>
        <field name="res_model">dingtalk.hrm.list</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="员工花名册"
              id="dingtalk_hrm_list_menu"
              parent="zhineng_hrm_menu"
              sequence="1"
              action="dingtalk_hrm_list_action"/>

    <record id="dingtalk_get_hrm_list_form_view" model="ir.ui.view">
            <field name="name">dingtalk.get.hrm.list.form</field>
            <field name="model">dingtalk.get.hrm.list</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="is_all_emp"/>
                        </group>
                    </group>
                    <group>
                        <field name="emp_ids" widget="many2many_tags" placeholder="获取的员工..."/>
                    </group>
                    <footer>
                        <button string="开始获取" name="get_hrm_list" type="object" class="oe_highlight"/>
                        <button string="取消" class="btn btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="dingtalk_get_hrm_list_action" model="ir.actions.act_window">
            <field name="name">Dingtalk Get Hrm List</field>
            <field name="res_model">dingtalk.get.hrm.list</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

</odoo>
